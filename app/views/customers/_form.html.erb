<% form_for @customer do |f| %>
    <%= f.error_messages %>
    <p>
      <%= f.label :name %><br />
      <%= f.text_field :name %>
    </p>
    <% f.fields_for :investments do |builder| %>
        <%= render 'investment_fields', :inv_f => builder %>
    <% end %>
        <p><%= link_to_add_fields "Add Investment", f, :investments %></p>
    <p><%= f.submit "Submit" %></p>
<% end %>
