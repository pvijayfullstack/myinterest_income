<% form_for @customer do |customer_form| %>
    <%= customer_form.error_messages %>
    <p>
      <%= customer_form.label :name %><br />
      <%= customer_form.text_field :name %>
    </p>
    <div id="new_investments"> Investments:
      <% customer_form.fields_for :investments do |investment_fields| %>
          <%= render 'investment_fields', :inv_f => investment_fields %>
      <% end %>
    </div>
    <p><%= link_to "Add Investment" , {}, :class => "new_investment"%></p>
    <p><%= customer_form.submit "Submit" %></p>
<% end %>
